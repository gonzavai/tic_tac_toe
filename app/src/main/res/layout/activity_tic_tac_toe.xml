<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tic_tac_toe"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="@drawable/fondo_colores">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="45"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/textView_P1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="50"
            android:text="Player 1: 0"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="#D4000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_P2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="50"
            android:text="Player 2: 0"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="#D4000000"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="33.3"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/button_00"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="33.3"
                android:background="@drawable/buttons_tic_tac_toe"
                android:textSize="64sp"
                android:textStyle="bold"
                tools:ignore="NestedWeights"
                android:freezesText="true"
                />

            <Button
                android:id="@+id/button_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="33.3"
                android:background="@drawable/buttons_tic_tac_toe"
                android:textSize="64sp"
                android:textStyle="bold"
                android:freezesText="true"
                />

            <Button
                android:id="@+id/button_02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="33.3"
                android:background="@drawable/buttons_tic_tac_toe"
                android:textSize="64sp"
                android:textStyle="bold"
                android:freezesText="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="33.3"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/button_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="33.3"
                android:background="@drawable/buttons_tic_tac_toe"
                android:textSize="64sp"
                android:textStyle="bold"
                android:freezesText="true"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="33.3"
                android:background="@drawable/buttons_tic_tac_toe"
                android:textSize="64sp"
                android:textStyle="bold"
                android:freezesText="true"
                />

            <Button
                android:id="@+id/button_12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="33.3"
                android:background="@drawable/buttons_tic_tac_toe"
                android:textSize="64sp"
                android:textStyle="bold"
                android:freezesText="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="33.3"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/button_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="33.3"
                android:background="@drawable/buttons_tic_tac_toe"
                android:textSize="64sp"
                android:textStyle="bold"
                android:freezesText="true"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="33.3"
                android:background="@drawable/buttons_tic_tac_toe"
                android:textSize="64sp"
                android:textStyle="bold"
                android:freezesText="true"
                />

            <Button
                android:id="@+id/button_22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="33.3"
                android:background="@drawable/buttons_tic_tac_toe"
                android:textSize="64sp"
                android:textStyle="bold"
                android:freezesText="true"
                />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="45"
        android:weightSum="100">

        <Button
            android:id="@+id/button_reset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/button_reset"
            android:text="Reset"
            android:textColor="#D4000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="50"/>

        <Button
            android:id="@+id/button_finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/button_reset"
            android:text="Finish"
            android:textColor="#D4000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="50"/>


    </LinearLayout>





</androidx.appcompat.widget.LinearLayoutCompat>