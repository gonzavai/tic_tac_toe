<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:weightSum="100"
    android:background="@drawable/buttons_tic_tac_toe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_weight="30">

        <TextView
            android:id="@+id/textview_nombre_adapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:fontFamily="@font/bangers"
            android:text="Nombre: xxxxxx"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#E6FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/textview_dni_adapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:fontFamily="@font/bangers"
            android:text="Dni: xxxxxxxx"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#E6FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="5dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textview_victorias_adapter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="70"
        android:fontFamily="@font/bangers"
        android:padding="15dp"
        android:text="nnnnn"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#E6FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

</androidx.appcompat.widget.LinearLayoutCompat>