<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="300dp"
        android:background="@drawable/fondo_victoria"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="100">

        <TextView
            android:id="@+id/textview_1_pop_sing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="70"
            android:gravity="center"
            android:text="YOU WIN  / YOU LOSE!!!"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#D4000000"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_weight="30"
            android:weightSum="100">


            <Button
                android:id="@+id/button_play_pop_sing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="50"
                android:background="@drawable/buttons_tic_tac_toe"
                android:fontFamily="@font/bangers"
                android:text="play again"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_exit_pop_sing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="50"
                android:background="@drawable/buttons_tic_tac_toe"
                android:fontFamily="@font/bangers"
                android:text="EXIT"
                android:textSize="24sp" />
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
